---
import Honey from "../images/Honey.webp";
import Apple from "../images/Apple.webp";
import Vegetables from "../images/Vegetables.webp";
import Cheese from "../images/Cheese.webp";
import Meat from "../images/Meat.webp";
import Nuts from "../images/Nuts.webp";
import WinterAndSweets from "../images/WinterAndSweets.webp";
import { Image } from "astro:assets";

const categories = [
  {
    image: Honey,
    content: "Мед",
    href: "/categories/honey",
  },
  {
    image: Apple,
    content: "Плодове",
    href: "/categories/fruits",
  },
  {
    image: Vegetables,
    content: "Зеленчуци",
    href: "/categories/vegetables",
  },
  {
    image: Cheese,
    content: "Млечни Продукти",
    href: "/categories/dairy-products",
  },
  {
    image: Meat,
    content: "Месни Продукти",
    href: "/categories/meat-products",
  },
  {
    image: Nuts,
    content: "Ядки и Семена",
    href: "/categories/nuts-and-seeds",
  },
  {
    image: WinterAndSweets,
    content: "Зимнина и Сладки",
    href: "/categories/winter-food",
  },
  {
    image: WinterAndSweets,
    content: "Други",
    href: "/categories/others",
  },
];
---

<section class="bg-white dark:bg-gray-900 text-center px-4 py-8 lg:py-16">
  <h2
    class="mb-10 text-4xl font-bold tracking-tight leading-tight md:text-4xl lg:mb-14 xl:text-5xl dark:text-white"
  >
    Категории
  </h2>
  <div
    class="grid max-w-screen-xl px-4 mx-auto gap-8 md:grid-cols-2 lg:grid-cols-4 lg:gap-12 lg:px-0"
  >
    {
      categories.map((category) => (
        <a
          href={category.href}
          class="transform transition-transform duration-300 group rounded-lg overflow-hidden shadow-lg bg-gray-100 dark:bg-gray-800"
        >
          <div class="w-full h-64 overflow-hidden">
            <Image
              src={category.image}
              alt={category.content}
              class="object-cover w-full h-full group-hover:opacity-90 transition-opacity duration-300"
            />
          </div>
          <div class="p-4">
            <h3 class="text-lg font-semibold text-gray-800 dark:text-gray-200 group-hover:text-orange-500 transition-colors duration-300">
              {category.content}
            </h3>
          </div>
        </a>
      ))
    }
  </div>
</section>
